{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "noEmit": true,
    "types": ["jest", "node"]
  },
  "include": [
    "apps/*/src/**/*.ts",
    "apps/*/src/**/*.tsx",
    "apps/*/*.ts",
    "libs/*/src/**/*.ts",
    "libs/*/src/**/*.tsx"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/coverage",
    "**/.expo",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/test-setup.ts"
  ]
}
